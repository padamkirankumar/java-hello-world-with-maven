pipeline {
node('tomcatvm') {
    // Define tools
    def jdk = tool name: 'jdk11', type: 'jdk'
    def maven = tool name: 'mvn396', type: 'maven'
    
    // Set environment variables
    env.JAVA_HOME = jdk
    env.PATH = "${jdk}/bin:${maven}/bin:${env.PATH}"

    stage('Build') {
        steps {
            sh 'java -version'
            sh 'mvn --version'
        }
    }
}
}
